//选择排序的手撕核心代码

for(int i = 0; i < n-1; i++) {
	int temp = a[i];  //保存每一次的第一个数为对比对象
	int s = 0;  //用于保存下标
	for(int j = i+1; j < n-1; j++) { //二层for循环
		if(temp > a[j]) {   //用于判断是否最小，将遇到小的替换
			temp =  a[j];  //替换
			s = j;   //保留下标
		}
	}
	a[s] = a[i];   //将第一个替换到最小的位置
	a[i] = temp;  //将最小的替换上去，实际上是与上一步交换位置
}
